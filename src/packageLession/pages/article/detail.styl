
.page-scroll {
  height: 100vh;

}
.articleContainer
  padding: 20px 32px 0 32px

.articleHeader
  padding-bottom: 72px
  .title
    display: block
    font-family: PingFangSC-Semibold;
    font-size: 44px;
    font-weight: 600;
    line-height: 68px;
    letter-spacing: 0px;
    color: #121D3A;

  .from
    margin-top: 36px
    display: block
    font-family: PingFangSC-Regular;
    font-size: 32px;
    font-weight: normal;
    line-height: 44px;
    letter-spacing: 0px;
    color: #121D3A;



.articleFooter
  position: fixed
  bottom: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
  height: 120px
  width: 100%
  background-color: white
  border-top: 1px solid #E2E4EA
  .tip_wrap
    padding: 6px 4px 8px 12px
    background-color: #e74949
    border-radius: 20px;
    border-bottom-left-radius: 0
    font-size: 22px
    font-family:PingFangSC-Medium, PingFang SC
    color: #FFFFFF
  .btnwrap
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    height: 88px
    width: 80%
    background-color: #0051CC
    border-radius: 12px
    .text
      text-align: center
      font-family: PingFangSC-Regular;
      font-size: 30px;
      font-weight: normal;
      line-height: 35px;
      color: white

.modal
  position: absolute
  bottom: 0
  left: 0
  height: 100%
  width: 100%
  min-height: 420px
  display: flex
  justify-content: center
  align-items: flex-start

  background: linear-gradient(180deg, rgba(255,255,255,0.83) 0%, rgba(255,255,255,0.98) 100%);
  .button
    margin-top: 330px;
    height: 88px;
    width: calc(100% - 64px)
    border-radius: 8px;
    background: #0051CC;
    font-family: PingFangSC-Medium;
    font-size: 32px;
    font-weight: 500;
    line-height: 88px;
    letter-spacing: 0px;
    color: #FFFFFF;


.articleContainer .articleContent {
    font-size: 28px;
    line-height: 56px;
    color: #121d3a;
    /* text-align: justify; */
    text-align-last: left;
    padding-bottom: 140px
    // padding: 0 8px;
    position: relative;
}

.articleContainer .articleContent .taro_html {
  max-height: calc(300px + 200px);
  overflow: hidden
}
.articleContainer .articleContent .taro_html.full {
  max-height: fit-content;
  overflow: auto
}

.articleContainer .articleContent .h5-h1 {
    font-size: 40px;
    line-height: 60px;
    color: #121d3a;
    font-weight: 700;
    margin: 56px 0 32px;
}

.articleContainer .articleContent .h5-p {
    font-size: 32px;
    line-height: 64px;
    color: #121d3a;
    font-weight: 400;
    margin: 28px 0;
}

.articleContainer .articleContent .h5-b,
.articleContainer .articleContent .h5-strong {
    color: #121d3a;
}

.articleContainer .articleContent .h5-h2 {
    font-size: 36px;
    line-height: 60px;
    color: #121d3a;
    font-weight: 700;
    margin: 56px 0 32px;
}

.articleContainer .articleContent .h5-h3,
.articleContainer .articleContent .h5-h4,
.articleContainer .articleContent .h5-h5,
.articleContainer .articleContent .h5-h6 {
    font-size: 32px;
    line-height: 64px;
    color: #121d3a;
    font-weight: 700;
    margin: 56px 0 32px;
}

.articleContainer .articleContent .h5-img {
    display: block;
    width: 100%;
    /* margin: 16px 0; */
}

.articleContainer .articleContent .h5-figcaption {
    font-size: 24px;
    color: #9aa1b2;
    line-height: 34px;
    margin: 24px 0;
    text-align: center;
}

.articleContainer .articleContent .h5-ul,
.articleContainer .articleContent .h5-ol {
    padding-left: 32px;
}

.articleContainer .articleContent .h5-ul .h5-li {
    font-size: 28px;
    line-height: 56px;
    color: #121d3a;
    margin: 0 0 16px;
    list-style: disc;
}

.articleContainer .articleContent .h5-ol .h5-li {
    font-size: 28px;
    line-height:56px;
    color: #121d3a;
    margin: 0 0 16px;
}

.articleContainer .articleContent .h5-blockquote {
    background-color: #f6f6f6;
    margin: 32px 0;
    padding: 20px 32px;
    padding-left: 56px;
    border-left: 2px solid #9e9e9e;
    font-size: 26px;
    line-height: 52px;
    color: #555b6c;
}

.articleContainer .articleContent .h5-figure {
    overflow: auto;
    margin: 32px 0;
}

.articleContainer .articleContent .h5-table {
    border: 0.5px solid #ddd;
    border-spacing: 0;
    /* table-layout: fixed; */
    width: 100%;
}

.articleContainer .articleContent .h5-thead,
.articleContainer .articleContent .h5-tr {
    /* display: flex; */
    width: 100%;
    background-color: #f7f8fa;
}

.articleContainer .articleContent .h5-th,
.articleContainer .articleContent .h5-td {
    padding: 24px;
    flex: 1;
    border-left: 0.5px solid #ddd;
    /* display: flex;
  justify-content: center;
  align-items: center; */
    font-size: 24px;
    /* line-height: 17px; */
    color: #121d3a;
    text-align: center !important;
    white-space: nowrap;
}

.articleContainer .articleContent .h5-th {
    font-weight: 500;
}

.articleContainer .articleContent .h5-td {
    font-weight: 400;
    color: #121d3a;
}

.articleContainer .articleContent th:first-child,
.articleContainer .articleContent td:first-child {
    border-left: 0;
}

.articleContainer .articleContent tbody tr:nth-child(2n + 1) {
    background-color: #fff;
}

.articleContainer .articleContent .h5-a {
    color: #0051cc !important;
    text-decoration: underline !important;
}
.articleContainer .articleContent .h5-a {
    color: #0051cc !important;
    text-decoration: underline !important;
}

.articleContainer .articleContent .h5-mark {
    user-select: all;
    font-size: 32px;
    line-height: 56px;
    color: #121d3a;
    background-color: transparent;
    background-image: url('../../assets/icons/markBg.png');
    /* background-size: 1px 12px; */
    background-repeat: repeat-x;
    background-position: -2px 9px;
}

.tryArticleContent  {
  margin-top: -200px;
  background: linear-gradient(180deg, rgba(255,255,255,0.8) 0%, #FFFFFF 100%);
  width: 100%
  height: 430px;
  position: relative;

  padding: 40px 32px

  .header {
    position: relative
    width: 100%
    display: flex;
    justify-content: space-between;
    align-items: center;

    .line {
      width: 100%;
      height: 1px;
      background-color: #9AA0B1;
      flex:1;
    }
    .endTitle {
      margin: 0 16px
      font-size: 32px;
      font-family: "PingFang SC-中黑体, PingFang SC";
      font-weight: bold;
      color: #121D3A;
      line-height: 38px;

    }
  }
  .content {
    margin-top: 40px;
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center

    .upBtn {
      height: 80px;
      padding: 0 128px;
      background: linear-gradient(180deg, #E5C087 0%, #D5A864 100%);
      border-radius: 12px 12px 12px 12px;
      display: flex;
      justify-content: center;
      align-items: center;


      .upBtn_text {
        font-size: 28px;
        font-family: "PingFang SC-中黑体, PingFang SC";
        font-weight: bold;
        color: #FFFFFF;
        line-height: 33px;
      }
    }

    .descWrap {
      margin-top: 32px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;

      .desc {
        font-size: 24px;
        font-family: "PingFang SC-常规体, PingFang SC";
        font-weight: normal;
        color: #545968;
        line-height: 30px;
        text-align: center;
      }
    }
  }
}

.bottomAvailable {
  width: 100vw;
  height: 40px;
